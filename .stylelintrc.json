{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "ignoreFiles": [
    "build/*"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "declaration-empty-line-before": [
      "always",
      {
        "ignore": [
          "after-comment",
          "after-declaration"
        ]
      }
    ],
    "color-hex-case": "upper",
    "color-function-notation": "legacy",
    "alpha-value-notation": "number"
  }
}
